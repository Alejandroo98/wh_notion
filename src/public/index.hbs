<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../styles/main.css">
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous"> -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

</head>

<body>
    <nav class="nav">
        <div class="items-nav">
            <div>
                <p>Enviar mensajes</p>
            </div>
            <div>
                <p>AÃ±adir contactos</p>
            </div>
        </div>
        <div>
            <p>Cerrar sesion</p>
        </div>
    </nav>

    <main class="main-form">

        <div class="form-add-client" id="form-add-client">
            <form method="POST" action="/">
                <div>
                    <p>AGREGAR CONTACTO</p>
                </div>
                <div>
                    <input type="text" name="names" placeholder="Nombres del cliente">
                </div>
                <div>
                    <input type="number" name="phone" placeholder="Telefono">
                </div>
                <button type="submit">Guardar</button>
            </form>
        </div>

        <div>
            <form class="form-input" method="POST" action="/">

                <div>
                    <textarea type="text" placeholder="Mensaje" value id="textarea" cols="22" rows="10"
                        name="txt"></textarea>
                </div>
                <button type="submit">Enviar mensaje</button>
            </form>
        </div>

        <div class="contacts-send">

            <div class="container-registros">

                <div class="form-add-contact" id="form-add-contact">
                    <div id="clickMostrarForm"></div>
                    <h6>Agergar contacto</h6>
                    <span class="material-icons">add_circle_outline</span>
                </div>

                <div class="max-registros">
                    <table>
                        <thead>
                            <tr>
                                <th colspan="3">
                                    <input type="search" name="searchContact" id="searchContact"
                                        placeholder="Buscar cliente">
                                </th>
                            </tr>
                            <tr>
                                <th>
                                    <h6>
                                        Nombres
                                    </h6>
                                </th>
                                <th>
                                    <h6>
                                        Telefono
                                    </h6>
                                </th>
                                <th>
                                    <h6>
                                        Fecha
                                    </h6>
                                </th>
                                <th>
                                    <h6>
                                        Hora
                                    </h6>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="registrosClientes">
                            {{#each citasManana}}
                            <tr>
                                <td>{{ nombres }}</td>
                                <td>{{ telefono }}</td>
                                <td>{{ fecha }}</td>
                                <td>{{ hora }}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>

        </div>


    </main>

</body>

</html>